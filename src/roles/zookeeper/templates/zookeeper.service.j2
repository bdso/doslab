[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
Environment='ZOO_LOG_DIR={{ data_log_dir }}'
Environment='ZOO_LOG4J_PROP=INFO,ROLLINGFILE'
ExecStart={{ zookeeper_data_prefix }}/bin/zkServer.sh start
ExecStop={{ zookeeper_data_prefix }}/bin/zkServer.sh stop
Restart=on-failure
TimeoutSec=300

[Install]
WantedBy=multi-user.target
Alias=zookeeper.service